type Post {
  id: ID!
  title: String!
  content: String!
  allowComments: Boolean!
  comments: [Comment!]!
}

type Comment {
  id: ID!
  postId: ID!
  parentId: ID
  text: String!
  children: [Comment!]!
}

type Query {
  posts: [Post!]!
  post(id: ID!): Post
}

type Mutation {
  createPost(title: String!, content: String!, allowComments: Boolean!): Post!
  addComment(postId: ID!, parentId: ID, text: String!): Comment!
}

type Subscription {
  commentAdded(postId: ID!): Comment!
}
